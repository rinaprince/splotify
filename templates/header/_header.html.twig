{% extends 'base.html.twig' %}

{% block title %}Hello HeaderController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <nav>
            <ul>
                {% if user %}
                    <li>Bienvingut, {{ user.username }} | <a href="{{ path('app_logout') }}">Tancar sessió</a></li>
                    <div>
                        <h1>Navegació</h1>

                        <a href="{{ path('app_home') }}">Pàgina principal</a>

                        <a href="{{ path('app_album') }}">Gestió d'àlbums</a>

                        <a href="{{ path('app_songs') }}">Pàgina principal</a>

                        <a href="{{ path('app_album_details') }}">Pàgina de detall</a>
                    </div>
                {% else %}
                    <li><a href="{{ path('app_login') }}">Iniciar sessió</a></li>
                {% endif %}
            </ul>
        </nav>
    </div>
{% endblock %}
