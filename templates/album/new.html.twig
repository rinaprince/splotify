{% extends 'base.html.twig' %}

{% block title %}Creant Àlbums{% endblock %}

{% block body %}

    <div class="container d-flex justify-content-center py-5">
        <div class="row">
            <div class="col-12">
                <h2 class="fs-5 border-3 border-bottom border-info-subtle">Creant un àlbum</h2>
            </div>
        </div>
    </div>

    {{ include('album/_form.html.twig') }}

    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between">
                    <button class="btn btn-danger"><a href="{{ path('app_album_index') }}"
                                                                class="link-underline link-underline-opacity-0 text-white">Torna
