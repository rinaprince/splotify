{% extends 'base.html.twig' %}

{% block title %}Albums{% endblock %}

{% block body %}

    <div class="container d-flex justify-content-center py-5">
        <div class="row">
            <div class="col-12">
                <h2 class="fs-5 border-3 border-bottom border-info-subtle">Llista d'àlbums</h2>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <button class="btn btn-warning mb-5"><a href="{{ path('app_album_new') }}"
                                                class="link-underline link-underline-opacity-0 text-white">Crear
                àlbum</a></button>
    </div>

    <!--<div class="d-flex justify-content-center mb-3">
        <select class="form-select w-25" aria-label="Default select example" name="band" id="band">
            <option selected>Sel·lecciona una banda</option>
            {% for band in bands %}
                <option value="{{ band.id }}">{{ band.name }}</option>
            {% endfor %}
        </select>
    </div>-->

    <div class="container d-flex justify-content-center text-center">
        <div class="row">
            <div class="col-12">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr class="table-info border border-dark-subtle">
                        <th>Id</th>
                        <th>Titol</th>
                        <th>Publicat</th>
                        <th>Cover</th>
                        <th>Accions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for album in albums %}
                        <tr>
                            <td>{{ album.id }}</td>
                            <td>{{ album.title }}</td>
                            <td>
                                {% if album.releasedAt %}
                                    {{ album.releasedAt|date('Y-m-d') }}
                                {% endif %}
                            </td>
                            <td>{{ album.cover }}</td>
                            <td class="d-flex">
                                <!--<button class="btn btn-success ms-5 me-2"><a
                                            href="{{ path('app_album_show', {'id': album.id}) }}"
                                            class="link-underline link-underline-opacity-0"><i
                                                class="bi bi-eye text-white"></i></a></button>-->
                                <button class="btn btn-primary me-2"><a
                                            href="{{ path('app_album_edit', {'id': album.id}) }}"
                                            class="link-underline link-underline-opacity-0"><i
                                                class="bi bi-pencil-square text-white"></i></a></button>
                                {{ include('album/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">No s'ha trobat res</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
