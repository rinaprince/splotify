{% extends 'base.html.twig' %}

{% block title %}Àlbum{% endblock %}

{% block body %}
    <h1>Detalls de l'àlbum</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Títol</th>
                <td>{{ album.title }}</td>
            </tr>
            <tr>
                <th>Cançons</th>
                <td>
                    <ol>
                        {% for song in album.songs %}
                            <li>{{ song.title }} <strong>Duració:</strong> {{ song.duration }}</li>
                        {% endfor %}
                    </ol>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_home') }}">back to list</a>

    <!--<a href="{{ path('app_album_edit', {'id': album.id}) }}">edit</a>-->

    <!--{{ include('album/_delete_form.html.twig') }}-->
{% endblock %}
