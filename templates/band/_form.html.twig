{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
<div class="container bg-white">
    <div class="row">
        <div class="col-6 mb-5">
            {{ form_row(form.name, {'label': 'Nom', 'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-6 mb-5">
            {{ form_row(form.bio, {'label': 'Biografia', 'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="col-6">
            {{ form_row(form.photoFile, {'label': 'Imatge', 'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</div>
{{ form_widget(form) }}
<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between">
                <button class="btn btn-danger"><a href="{{ path('app_band_index') }}"
                                                  class="link-underline link-underline-opacity-0 text-white">Tornar
                        enrere</a></button>
                <button class="btn btn-outline-success">{{ button_label|default('Guardar') }}</button>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
