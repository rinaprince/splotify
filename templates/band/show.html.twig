{% extends 'base.html.twig' %}

{% block title %}Banda{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center py-5">
        <div class="row">
            <div class="col-12">
                <h2 class="fs-5 border-3 border-bottom border-info-subtle">Detalls de la banda</h2>
            </div>
        </div>
    </div>

    <div class="container d-flex justify-content-center text-center">
        <div class="row">
            <div class="col-12">
                <table class="table">
                    <tbody>
                    <tr>
                        <th class="table-warning">Id</th>
                        <td>{{ band.id }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Nom</th>
                        <td>{{ band.name }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Biografia</th>
                        <td>{{ band.bio }}</td>
                    </tr>
                    <tr>
                        <th class="table-warning">Imatge</th>
                        <td><img src="/images/bands/{{ band.photo }}" class="w-50" alt="Portada banda"> </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container d-flex justify-content-center">
        <div class="row">
            <div class="col-12">
                <button class="btn btn-danger mt-3 mb-5"><a href="{{ path('app_home') }}"
                                                            class="link-underline link-underline-opacity-0 text-white">Tornar
                        enrere</a></button>
            </div>
        </div>
    </div>

    <!--<a href="{{ path('app_band_edit', {'id': band.id}) }}">edit</a>-->

    <!--{{ include('band/_delete_form.html.twig') }}-->
{% endblock %}
